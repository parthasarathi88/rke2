apiVersion: v1
kind: Service
metadata:
  name: jaeger-ui
  namespace: logging-tracing
spec:
  selector:
    app.kubernetes.io/component: all-in-one
    app.kubernetes.io/instance: jaeger
    app.kubernetes.io/name: jaeger
  ports:
  - name: ui
    port: 16686
    targetPort: 16686
    protocol: TCP
  type: ClusterIP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: jaeger
  namespace: logging-tracing
  annotations:
    kubernetes.io/ingress.class: kong-external
spec:
  rules:
  - host: jaeger.dellpc.in
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: jaeger-ui
            port:
              number: 16686